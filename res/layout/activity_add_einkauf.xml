<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radialback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.coopsysapp.AddEinkaufActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Einkauf hinzufügen"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="5" >

        <TextView
            android:id="@+id/textView2"
            android:layout_gravity="left"
            android:text="Name:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etEinkaufName"
            android:layout_gravity="fill_horizontal"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:text="Betrag:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etEinkaufBetrag"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_gravity="left"
            android:text="Datum:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etDate"
            android:layout_gravity="fill_horizontal"
            android:focusable="false"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView8"
            android:layout_gravity="left|center_vertical"
            android:text="Eigenanteil:"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        
        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_gravity="center_horizontal|center_vertical"

/>

    </GridLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnEinkaufOk"
        android:layout_below="@+id/gridLayout1"
        android:layout_marginLeft="16dp" 
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:columnCount="3"
                android:rowCount="7" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_gravity="center"
                    android:text="Gast"
                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_gravity="center"
                    android:text="Betrag (in €)"
                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Notiz"
                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/spnGuest1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag1"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

                <EditText
                    android:id="@+id/etNote1"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:textColor="#FFFFFF" />

                <Spinner
                    android:id="@+id/spnGuest2"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag2"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" 
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etNote2"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" 
                    android:textColor="#FFFFFF"/>

                <Spinner
                    android:id="@+id/spnGuest3"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag3"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" 
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etNote3"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" 
                    android:textColor="#FFFFFF"/>

                <Spinner
                    android:id="@+id/spnGuest4"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag4"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/etNote4"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" 
                    android:textColor="#FFFFFF"/>

                <Spinner
                    android:id="@+id/spnGuest5"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag5"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" 
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etNote5"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" 
                    android:textColor="#FFFFFF"/>

                <Spinner
                    android:id="@+id/spnGuest6"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag6"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" 
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/etNote6"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" 
                    android:textColor="#FFFFFF"/>
            </GridLayout>

        </LinearLayout>
    </ScrollView>
    
        <Button android:id="@+id/btnEinkaufOk" 
            android:layout_width="200sp" 
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true" 
            android:layout_above="@+id/btnVerteilen"
            android:text="Einkauf bestätigen" 
            android:textColor="#FFFFFF" />
        
        <TextView
	        android:id="@+id/textViewUsername"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView1"
	        android:layout_marginLeft="14dp"
	        android:layout_toRightOf="@+id/imageView1"
	        android:text="Testuser"
	        android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnVerteilen"
            android:layout_alignRight="@+id/btnEinkaufOk"
            android:text="offen: "
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textViewOffenerBetrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignRight="@+id/scrollView1"
            android:text="0 €"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/user" />

        <ImageButton
            android:id="@+id/btnVerteilen"
            android:layout_width="50sp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/textViewUsername"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/ic_menu_rotate" />

        

</RelativeLayout>