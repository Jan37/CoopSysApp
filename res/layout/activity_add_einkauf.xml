<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coopsysapp.AddEinkaufActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Einkauf hinzufügen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_gravity="left"
            android:text="Name:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/etEinkaufName"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:text="Betrag:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/etEinkaufBetrag"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberDecimal" />
    </GridLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="250sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="400sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:columnCount="3"
                android:rowCount="6" >

                <Spinner
                    android:id="@+id/spnGuest1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag1"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" />


                <EditText
                    android:id="@+id/etNote1"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" />

                <Spinner
                    android:id="@+id/spnGuest2"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag2"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etNote2"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" />

                <Spinner
                    android:id="@+id/spnGuest3"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag3"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etNote3"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" />

                <Spinner
                    android:id="@+id/spnGuest4"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag4"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etNote4"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" />

                <Spinner
                    android:id="@+id/spnGuest5"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag5"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etNote5"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" />

                <Spinner
                    android:id="@+id/spnGuest6"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal" />

                <EditText
                    android:id="@+id/etBetrag6"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etNote6"
                    android:layout_width="100sp"
                    android:layout_gravity="fill_horizontal"
                    android:ems="10" />
            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEinkaufOk"
        android:layout_below="@id/scrollView1"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Einkauf bestätigen" />

        <ImageButton
            android:id="@+id/btnVerteilen"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnEinkaufOk"
            android:layout_alignRight="@+id/scrollView1"
            android:layout_below="@+id/scrollView1"
            android:background="@android:drawable/ic_menu_rotate" />

</RelativeLayout>