<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/lib/com.example.coopsysapp.util.AccountTextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radialback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.coopsysapp.MainMenuActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/zwegat" />

    <com.example.coopsysapp.util.AccountTextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:text="+- 0€"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Testuser"
        android:textColor="#FFFFFF" />

    <com.example.coopsysapp.util.AccountTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:text="Kontostand"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/user" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:columnCount="2"
        android:rowCount="2" >

        <Button
            android:id="@+id/button1"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="Konto-\nauszug"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="Schulden begleichen"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="Einkauf hinzufügen"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonHighscore"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="Highscores"
            android:textColor="#FFFFFF" />

    </GridLayout>

</RelativeLayout>